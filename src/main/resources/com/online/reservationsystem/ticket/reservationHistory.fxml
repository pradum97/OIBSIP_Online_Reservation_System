<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.online.reservationsystem.controller.ticket.ReservationHistory">
   <center>
   
          <TableView fx:id="historyTableView">
           <columns>
               <TableColumn fx:id="historyIdColumn" prefWidth="100" text="History ID" />
               <TableColumn fx:id="passengerNameColumn" prefWidth="150" text="Passenger Name" />
               <TableColumn fx:id="passengerPhoneColumn" prefWidth="150" text="Passenger Phone" />
               <TableColumn fx:id="passengerAgeColumn" prefWidth="100" text="Passenger Age" />
               <TableColumn fx:id="pnrColumn" prefWidth="100" text="PNR No" />
               <TableColumn fx:id="journeyDateColumn" prefWidth="100" text="Journey Date" />
               <TableColumn fx:id="trainNoColumn" prefWidth="100" text="Train No" />
               <TableColumn fx:id="trainNameColumn" prefWidth="100" text="Train No" />
               <TableColumn fx:id="fromStnColumn" prefWidth="100" text="From Station" />
               <TableColumn fx:id="toStnColumn" prefWidth="100" text="To Station" />
               <TableColumn fx:id="statusColumn" prefWidth="100" text="Status" />
               <TableColumn fx:id="seatsNumColumn" prefWidth="100" text="Seats Number" />
               <TableColumn fx:id="amountColumn" prefWidth="100" text="Amount" />
           </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
       </TableView>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="69.0" prefWidth="1402.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titleL">
               <font>
                  <Font name="Arial Black" size="19.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
</BorderPane>
